<%= link_to  "<<Back to list", pages_path(:subject_id => @subject.id), class:"back-link" %>

<div class="pages show">
        <h2>Show Page</h2>
    
        <table summary="Page detail view">
            <tr>
                <th>Name</th>
                <td><%= @page.name %></td>
            </tr>
            <tr>
                <th>Permalink</th>
                <td><%= @page.permalink %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= @page.position %></td>
            </tr>
            <tr>
                <th>Visible?</th>
                <td><%= @page.visible ? 'true' : 'false' %></td>
            </tr>
            
            <tr>
                <th>Subject ID</th>
                <td><%= @page.subject_id %></td>
            </tr>
        </table>
    </div>