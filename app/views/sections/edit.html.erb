        <div class="section edit">
            <h2>Edit Section</h2>
            <%= form_for @section, :url => section_path(@section, :page_id => @page.id), :method => 'patch'  do |f| %>
            <%= render  :partial => 'form', :locals => {:f => f} %>
            <div class="form-buttons">
                <%= f.submit "Update Section" %>
            </div>
        <% end %>
        </div>
    